package Pizza;

import java.io.PrintStream;
import java.util.Scanner;

class Pizza {
    // Name       : W.J.R. Budding
    // Assignment : Pizza
    // Date       : 2016-09-20
	
	PrintStream out;
	
	Pizza(){ 
		out = new PrintStream(System.out);
	}
	
	int fctn(int fctn){
		int nmbr=fctn;
		out.println("*"+ nmbr);
		for(int c =1 ; c <=nmbr; c++)
			nmbr = nmbr*c;
		out.println("*"+ nmbr);
		return nmbr;
	}
	
	int Pblty(int ingr, int top){
		int fing, ftop, fit, Pblty;

		// calculate possibilities N!/K!*(N-K)! figure out how to calculate this.
		fing=fctn(ingr);
		out.println(fing);
		ftop=fctn(top);
		out.println(ftop);
		fit=fctn(ingr-top);
		out.println(fit);
		Pblty=fing/(ftop*fit);
		out.println(Pblty);
		return Pblty;
		
		//http://math.stackexchange.com/questions/35174/how-calculate-the-number-of-possible-different-variations
		
	}
	
	void start(){ 
		int mario_in=10, mario_top=3, luigi_in=9, luigi_top=4, mariop, luigip;
		mariop = Pblty(mario_in,mario_top);
		out.println(mariop);
		out.println();
		luigip = Pblty(luigi_in,luigi_top);
		out.println(luigip);

	}

	public static void main(String[] args) {
		new Pizza().start();

	}

}
